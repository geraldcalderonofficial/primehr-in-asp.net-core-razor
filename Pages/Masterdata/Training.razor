@page "/masterdata-training"
@inject ITraining service
@inject SweetAlertService Swal;
@using System.Linq.Dynamic.Core
@using HRMSv4.Client.Helpers
@using DevExpress.Blazor

<div class="app-page-title">
    <div class="page-title-wrapper">
        <div class="page-title-heading">
            <h3>
                Training
            </h3>
        </div>
        <div class="page-title-actions">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Training</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<div class="main-card mb-3 card">
    <div class="card-body" onbeforeunload="TestDataTablesRemove('#example')">
        <div class="col-lg-16" align="right">
            <button class="mb-2 me-2 btn btn-outline-2x btn-outline-primary" onclick="@InsertRow" Disabled=@(trainingToInsert != null) style="margin-bottom: 10px; width:200px"> Add Training </button>
        </div>
        <DxGrid @ref="MyGrid" Data="@trainings" ValidationEnabled="false"
                SelectionMode="GridSelectionMode.Single"
                AllowSelectRowByClick="true"
                CustomizeEditModel="Grid_CustomizeEditModel"
                EditModelSaving="Grid_EditModelSaving"
                DataItemDeleting="Grid_DataItemDeleting"
                PopupEditFormCssClass="pw-800"
                EditMode="GridEditMode.EditRow"
                PagerVisible="true"
                PageSize="50" ShowFilterRow="true">
            <Columns>
                <DxGridDataColumn FieldName="TrainingTitle">
                    <CellEditTemplate>
                        @{
                            var record = (HRMSv4.Shared.OnBoarding.Training)context.EditModel;
                        }
                        <DxTextBox CssClass="cw-320" NullText="Enter training title" @bind-Text="record.TrainingTitle" SizeMode="SizeMode.Medium" />
                    </CellEditTemplate>
                </DxGridDataColumn>
                <DxGridDataColumn FieldName="TrainingType">
                    <CellEditTemplate>
                        @{
                            var record = (HRMSv4.Shared.OnBoarding.Training)context.EditModel;
                        }
                        <DxComboBox CssClass="cw-480" AllowUserInput="true" Data="@listType" @bind-Text="record.TrainingType" @bind-Value="record.TrainingType" SizeMode="SizeMode.Medium" />
                    </CellEditTemplate>
                </DxGridDataColumn>
                <DxGridDataColumn FieldName="TrainingCategory">
                    <CellEditTemplate>
                        @{
                            var record = (HRMSv4.Shared.OnBoarding.Training)context.EditModel;
                        }
                        <DxComboBox CssClass="cw-480" AllowUserInput="true" Data="@listCategory" @bind-Text="record.TrainingCategory" @bind-Value="record.TrainingCategory" SizeMode="SizeMode.Medium" />
                    </CellEditTemplate>
                </DxGridDataColumn>
                <DxGridDataColumn TextAlignment="DevExpress.Blazor.GridTextAlignment.Center" FieldName="" Width="100px">
                    <CellDisplayTemplate>
                        @{
                            var temp = (context.DataItem as HRMSv4.Shared.OnBoarding.Training);
                        }
                        <button class="border-0 btn-transition btn btn-outline-success" data-toggle="tooltip" data-placement="top" title="Edit" @onclick="@(() => MyGrid.StartEditDataItemAsync(temp))">
                            <i class="lnr-pencil"></i>
                        </button>
                        <button class="border-0 btn-transition btn btn-outline-primary" data-toggle="tooltip" data-placement="top" title="Delete" @onclick="@(() => DeleteRow(temp))">
                            <i class="lnr-trash"></i>
                        </button>
                    </CellDisplayTemplate>
                    <CellEditTemplate>
                        <button class="border-0 btn-transition btn btn-outline-success" data-toggle="tooltip" data-placement="top" title="Save" @onclick="@(() => MyGrid.SaveChangesAsync())">
                            <i class="lnr-checkmark-circle"></i>
                        </button>
                        <button class="border-0 btn-transition btn btn-outline-danger" data-toggle="tooltip" data-placement="top" title="Cancel" @onclick="@(() => MyGrid.CancelEditAsync())">
                            <i class="lnr-cross"></i>
                        </button>
                    </CellEditTemplate>
                </DxGridDataColumn>
            </Columns>
        </DxGrid>
       

       
    </div>
</div>

@code {
    //IList<HRMSv4.Shared.OnBoarding.Training> trainings;
    RadzenDataGrid<HRMSv4.Shared.OnBoarding.Training>? trainingGrid;
    HRMSv4.Shared.OnBoarding.Training trainingToInsert;
    List<string> listType = new List<string>();
    List<string> listCategory = new List<string>();

    //List<string> listType = new List<string> { "Quality Training", "Managerial Training", "Technical/Skill Training", "Safety Training", "Professional/Legal Training" };
    //List<string> listCategory = new List<string> { "Administration", "Finance", "Industrial", "IT/Computer", "Marketing", "Medicine" };

    string titleToEdit,
           typeToEdit,
           catToEdit;
    bool isLoading;
    int count;
    bool isPopUp = false;
    ////
    IEnumerable<HRMSv4.Shared.OnBoarding.Training> trainings;
    object SelectedTemplateItem { get; set; }
    IGrid? MyGrid { get; set; }
    string userId = "";

    object Trainings { get; set; }
    GridDevExtremeDataSource<HRMSv4.Shared.OnBoarding.Training> gridDevExtremeDataSource;

    protected override async Task OnInitializedAsync()
    {
        //GetType();
        //GetCategory();
        //trainings = await service.GetAll();
        var user = (await _AutService.GetAuthenticationStateAsync()).User;
        userId = user.FindFirst(c => c.Type.Contains("nameidentifier"))?.Value;
        await UpdateDataAsync();
    }

    async Task UpdateDataAsync()
    {
        listType = await service.GetTrainingType();
        listCategory = await service.GetCategories();


        trainings = await service.GetAll();

        var tempList = trainings.AsQueryable();

        gridDevExtremeDataSource = new GridDevExtremeDataSource<HRMSv4.Shared.OnBoarding.Training>(tempList);
        gridDevExtremeDataSource.CustomizeLoadOptions = (loadOptions) =>
        {
            // If underlying data is a large SQL table, specify PrimaryKey and PaginateViaPrimaryKey.
            // This can make SQL execution plans more efficient.
            loadOptions.PrimaryKey = new[] { "QuestionTypeId" };
            loadOptions.PaginateViaPrimaryKey = true;

        };

        Trainings = gridDevExtremeDataSource;


        StateHasChanged();
    }

    async Task InsertRow()
    {
        //trainingToInsert = new HRMSv4.Shared.OnBoarding.Training();
        //if (count == 0) { count++; }
        //await trainingGrid.InsertRow(trainingToInsert);
        await MyGrid.StartEditNewRowAsync();
    }

    void Grid_CustomizeEditModel(GridCustomizeEditModelEventArgs e)
    {
        if (e.IsNew)
        {
            var temp = (HRMSv4.Shared.OnBoarding.Training)e.EditModel;
        }
        else
        {
            var temp = (HRMSv4.Shared.OnBoarding.Training)e.EditModel;
        }
    }

    async Task Grid_EditModelSaving(GridEditModelSavingEventArgs e)
    {
        var data = e.EditModel as HRMSv4.Shared.OnBoarding.Training;
        if (data.TrainingTitle == null || data.TrainingType == null || data.TrainingCategory == null )
        {
            await _Swal.FireAsync("Oops...", "Please fill all the filleds", "warning");
            return;
        }
        Response result = new Response();

        if (!string.IsNullOrWhiteSpace(data.TrainingTitle))
        {
            data.TrainingTitle = GetValidString(data.TrainingTitle);

            if (e.IsNew)
            {
                data.CreatedBy = userId;
                result = await service.Add(data);
            }
            else
            {
                var res = await service.GetCheckDuplicate(data);
                if (res.StatusCode == 200)
                {
                    data.UpdatedBy = userId;
                    result = await service.Update(data);
                }
                else if (res.StatusCode == 400)
                {
                    await _Swal.FireAsync("Oops...", result.Value, "warning");
                }
                else
                {
                    await _Swal.FireAsync("Error", result.Value, "error");
                }

            }


            if (result.StatusCode == 200)
            {
                await _Swal.FireAsync("Success", result.Value, "success");
                await UpdateDataAsync();
            }
            else
            {
                await UpdateDataAsync();
                await _Swal.FireAsync("Oops...", result.Value, "error");
            }
        }
    }

    async Task Grid_DataItemDeleting(GridDataItemDeletingEventArgs e)
    {
        var temp = (HRMSv4.Shared.OnBoarding.Training)e.DataItem;
        var result = await service.Delete(temp.TrainingId);
        if (result.StatusCode == 200)
        {
            await _Swal.FireAsync("Success", result.Value, "success");
            await UpdateDataAsync();
        }
        else
        {
            await _Swal.FireAsync("Error", result.Value, "error");
        }
    }

    

    async Task DeleteRow(HRMSv4.Shared.OnBoarding.Training training)
    {
        SweetAlertResult result = await Swal.FireAsync(new SweetAlertOptions
            {
                Title = "Are you sure?",
                Text = "You are about to delete this record.",
                Icon = "warning",
                ShowCancelButton = true,
                ConfirmButtonText = "Yes, delete it!",
                CancelButtonText = "Cancel",
                CancelButtonColor = "#414141"
            });
        if (!string.IsNullOrWhiteSpace(result.Value))
        {
            HRMSv4.Shared.Response res = new HRMSv4.Shared.Response();

            if (training == trainingToInsert)
            {
                trainingToInsert = null;
            }

            if (trainings.Contains(training))
            {
                res = await service.Delete(training.TrainingId);

                if (res.StatusCode == 200)
                {
                    //trainings = await service.GetAll();
                    await Swal.FireAsync("Success", "You have successfully deleted a record.", "success");
                    await UpdateDataAsync();
                }
                else
                {
                    await Swal.FireAsync("Oops...", "Something went wrong!", "error");
                }
            }
            else
            {
                trainingGrid.CancelEditRow(training);
                await UpdateDataAsync();
            }
        }
        else
        {
            await Swal.FireAsync("Wew!", "Your record is safe.", "success");
        }
    }

    string GetValidString(string str)
    {
        string validString = "";
        if (str != null)
        {
            string[] newStr = str.Split(' ');
            List<string> validList = newStr.Where(c => c != "" && c != "\t" && c != "\n").ToList();
            foreach (string str1 in validList)
            {
                if (validString != "")
                {
                    validString += " " + str1;
                }
                else
                {
                    validString = str1;
                }
            }
        }

        return validString;
    }

}
